{% extends 'base.html.twig' %}

{% block title %}Hello HappeningController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container">
        <h1>{{ event.title }}!</h1>
        <div class="row">
            <div class="col-lg-8 col-md-8">{{ form(attendForm) }}</div>
            <div class="col-md-4 col-lg-8">
                <h3>Already apply</h3>
                {% for attender in attenders %}
                    <div>
                        {{ attender.id }}

                    </div>
                {% endfor %}
            </div>
        </div>


        <hr>


    </div>
{% endblock %}
